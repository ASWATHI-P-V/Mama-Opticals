{
  "kind": "collectionType",
  "collectionName": "chat_messages",
  "info": {
    "singularName": "chat-message",
    "pluralName": "chat-messages",
    "displayName": "Ai Chat Message",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "session": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::chat-session.chat-session",
      "inversedBy": "messages"
    },
    "senderRole": {
      "type": "string",
      "required": true
    },
    "message": {
      "type": "text",
      "required": true
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "timestamp": {
      "type": "datetime"
    }
  }
}
