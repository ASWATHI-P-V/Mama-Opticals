{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "description": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "price": {
      "type": "integer",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "image": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images"
      ],
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "category": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "orders": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::order.order",
      "mappedBy": "products"
    },
    "wishlistedByUsers": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::users-permissions.user"
    },
    "lens_types": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lens-type.lens-type"
    },
    "lens_coatings": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lens-coating.lens-coating"
    },
    "frame_weights": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::frame-weight.frame-weight"
    },
    "brands": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::brand.brand",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "frame_materials": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::frame-material.frame-material"
    },
    "frame_shapes": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::frame-shape.frame-shape"
    },
    "lens_thicknesses": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lens-thickness.lens-thickness"
    },
    "average_rating": {
      "type": "decimal",
      "min": 0,
      "max": 5,
      "default": 0,
      "required": false,
      "description": "Average user rating for the product"
    },
    "reviewCount": {
      "type": "integer",
      "min": 0,
      "default": 0,
      "required": false,
      "description": "Number of reviews for the product"
    },
    "offers": {
      "type": "text",
      "required": false,
      "description": "Details about current offers or promotions (e.g., 'Up to 20% off')",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "offerPrice": {
      "type": "decimal",
      "required": false,
      "description": "Discounted price if an offer is active",
      "pluginOptions": {
        "i18n": {
          "localized": false
        }
      }
    },
    "reviews": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::review.review",
      "mappedBy": "product"
    },
    "types": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::type.type"
    },
    "variants": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::product-variant.product-variant",
      "mappedBy": "product"
    }
  }
}
