{
  "kind": "collectionType",
  "collectionName": "addresses",
  "info": {
    "singularName": "address",
    "pluralName": "addresses",
    "displayName": "Address",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "phone": {
      "type": "customField",
      "customField": "plugin::strapi-phone-validator.phone",
      "options": {
        "country": "in"
      },
      "configurable": false
    },
    "address_name": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "locality_name": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "country_name": {
      "type": "string",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "home_work": {
      "type": "enumeration",
      "enum": [
        "Home",
        "Work",
        "Other"
      ],
      "required": false,
      "description": "Type of address (Home, Work, Other)",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "box_number": {
      "type": "string",
      "required": false,
      "description": "Apartment, suite, unit, or P.O. box number",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "is_default": {
      "type": "boolean",
      "default": false,
      "required": true,
      "description": "Indicates if this is the user's default address",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "addresses"
    }
  }
}
