{
  "kind": "collectionType",
  "collectionName": "supports",
  "info": {
    "singularName": "support",
    "pluralName": "supports",
    "displayName": "Support Chat Message",
    "description": "Stores individual chat messages for human customer support."
  },
  "options": {
    "draftAndPublish": false,
    "timestamps": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "message": {
      "type": "text",
      "required": false,
      "minLength": 1
    },
    "sender": {
      "type": "enumeration",
      "enum": [
        "user",
        "admin"
      ],
      "required": true,
      "default": "user"
    },
    "user": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user",
      "inversedBy": "supports",
      "required": true
    },
    "conversationId": {
      "type": "uid",
      "minLength": 16,
      "required": true,
      "unique": false
    },
    "readByAdmin": {
      "type": "boolean",
      "default": false
    },
    "readByUser": {
      "type": "boolean",
      "default": false
    },
    "attachments": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": ["images", "files", "videos", "audios"]
    }
  }
}